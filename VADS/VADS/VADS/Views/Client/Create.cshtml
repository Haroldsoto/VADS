        @Html.ValidationSummary(true)

    <div class="form-group">
    <label>Nombre</label>
    @Html.TextBoxFor(model => model.Name, new{@class = "form-control name", @placeholder = "Nombre" })
        @Html.ValidationMessageFor(model => model.Name)

</div>
