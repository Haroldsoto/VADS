</div>
<div class="form-group">
    <label>Teléfono</label>
    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "Teléfono", @type = "phone" })
    @Html.ValidationMessageFor(model => model.Phone)
</div>
