@model IEnumerable<VADS.Models.Appointment>

@{
    ViewBag.Title = "Index";
}

<h2>Agenda de Mantenimientos</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table table-striped table-hover table-responsive">
    <tr>
        <th>
            Mantenimiento
        </th>
        <th>
            Fecha
        </th>
        <th>
            Hora
        </th>
        <th>
            Representante asignado
        </th>
        <th>
           Vehículo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Maintenance)
        </td>
        <td>
            @item.Date.ToShortDateString()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Round)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserProfile.NombreCompleto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VehicleInfoModel.VehicleModel.VehicleBrand)
            @Html.DisplayFor(modelItem => item.VehicleInfoModel.VehicleModel)
            @Html.DisplayFor(modelItem => item.VehicleInfoModel.Year)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
