@if (Request.IsAuthenticated) {
    <text>
        Hola, @Html.ActionLink(User.Identity.Name, "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Manage" })!
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })) {
            @Html.AntiForgeryToken()
    <a class="btn btn-default" href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a>
        }
    </text>
}
else
{
    <div class="btn-group btn-group-sm">
        @Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class="btn btn-default"})
        @Html.ActionLink("Acceder", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-default" })
    </div>
