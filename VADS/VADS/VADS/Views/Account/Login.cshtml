@model VADS.Models.LoginModel

@{
    ViewBag.Title = "Acceder";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<div>
    <h2>Utiliza una cuenta para acceder.</h2>
    
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Nombre de Usuario" })
    </div>

        @*@Html.ValidationMessageFor(m => m.UserName)*@
        <div class="form-group">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña", @type = "password" })
            @*@Html.ValidationMessageFor(m => m.Password)*@
        </div>
        
        <div class="form-group">
            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "checkbox-inline" })
            @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox-inline" })
        </div>
    <div class="form-group">
    <div class="col-sm-offset-0 col-sm-10">
      <button type="submit" class="btn btn-default">Acceder</button>
    </div>
  </div>
    <div class ="col-sm-offset-0 col-sm-10 ">
        <br/>
        <p>
            <strong>@Html.ActionLink("Regístrate", "Register") </strong> si no tienes una cuenta.
        </p>
    </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
